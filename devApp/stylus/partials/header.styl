header.header
  background-color $backgroundHeaderColor
  z-index 999
  
  > *
    border-bottom 1px solid #dedede
  
.header-topbar
  height 67px
  > .global-wrap
    display flex
    height 100%
    justify-content space-between
    align-items center

  .logo
    // sem estilo, classe para marcação e possível eventlistener

  .user
    position relative
    
    display flex
    justify-content space-between
    align-items center
    
    > *
      margin 0 5px
    
    .avatar
      size(40px)
      
      .circle
        size (100%)
        overflow hidden
        border-radius 50px
        position relative
      
      .photo
        max-width 100%
        max-height 100%
    
      .badge
        position absolute
        bottom -5px
        left 0px
        
    .info
      font-size 12px
      .name
        color #404040
        margin-bottom 3px
      .school
        color #b1b1b1
        
    
.header-menu
  .header-menu--list
    overflow hidden
  .header-menu--item
    float left
    padding 0 30px
    &:first-child
      padding-left 0
    &:last-child
      padding-right 0
      
    &:hover > .header-menu--subitem
      display block
      z-index 999
    
    a
      display inline-block
      padding 16px 0
      color #666
      text-decoration none
      
      &:hover 
        font-weight 600
        
    .header-menu--subitem
      display none
      position absolute
      background-color white
      padding 20px
      margin-top 1px
      margin-left -10px
      border 1px solid #dedede

      &:before
        background white
        content ""
        size(12px)
        left 12px
        margin -7px 0 0 0
        position absolute
        top 0
        border 1px solid #dedede
        border-right 0
        border-bottom 0
        transform rotate(45deg)
        
      h3
        text-transform uppercase
        font-size 12px
        font-weight 400
        color #999
        margin-bottom 15px
        
      ul > li
        margin-bottom 15px
        &:last-child
          margin-bottom 0
        
      
    img
      float left
      margin-right 8px
      margin-top -2px
      
      &.home
        margin-top -3px      
