footer.footer
  background-color #414141
  padding 60px 0 50px 0
  color white
  
  .footer-menu--list
    display flex
    align-items center
    padding-bottom 30px
    margin-bottom 30px
    border-bottom 1px solid #676767
    > li
      margin-right 25px
      a
        color white
        text-decoration none
      
      &.logo
        flex-grow 1
        text-align right
        margin 0
      
  .copyright
    font-size 12px
    
    display flex
    align-items center
    
    strong
      font-weight 600
      margin-left 5px
      
  .footer-menu--sociallist
    display flex
    margin-left 20px
    > li
      font-size 16px
      margin-right 15px
      &:last-child
        margin 0

      a
        color white
        text-decoration none
