.blackout
  display none
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  background-color alpha(black, 20%)
  justify-content space-around
  align-items center
  &.show
    display flex
  
.modal-ad-content
  position relative
  width 600px
  padding 20px
  background-color white
  border-radius 2px
  box-shadow 0px 2px 1px 0px rgba(0,0,0,0.25)
  
  .close-modal
    position absolute
    top 10px
    right 10px
    font-size 10px      

  h2
    font-weight 700
    font-size 14px
    color #666666
    margin-bottom 15px
  ul
    li
      width 50%
      float left
      margin 10px 0
      a
        color #404040
        text-decoration none
